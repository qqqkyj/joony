package day0619;

public class OperTest_06 {

	public static void main(String[] args) {
		//증감연산자 ++, --
		int a,b;
		a=b=5;
		
		//단항일경우에는 앞에 붙이나 뒤에 붙이나 같다
		++a;//원래 a값에서 1증가
		b++;//b=b+1
		
		System.out.println("a="+a);
		System.out.println("b="+b);
		
		//수식에서 사용할때는 전치, 후치의 결과값이 다르다.
		int m,n;
		m=n=0;
		a=b=5;
		
		m=a++;
		System.out.println("m="+m);
		
	}

}
